.wx-container{
	margin-top:4rem;
}

.wx-dialog{
	width: 18rem;
	border-radius: 10px;
	box-shadow: 0 0.5rem 0.5rem 0 rgba(170, 170, 170, 0.43);
	border: 0.05rem solid rgba(187, 187, 187, 1);
}

.wx-dialog-header-content{
	margin: 1rem 2rem 0 2rem;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}

.wx-dialog-content{
	margin:2rem 0;
	border-radius: 0.3rem;
	font-size:0.8rem;
	border-width:0.05rem;
	border-style:solid;
	text-align:left;
	opacity:0.5;
	transition:none;
	padding:0.3rem;
	width:100%;
}

.wx-dialog-footer{
	display: flex;
	flex-direction: row;
}

button{
	line-height: 2;
	width: 60%;
}